<% if @add_word_project  %>
  $("#word-projects").DataTable().clear().destroy();
  $("#word-project-table").html("<%= j render partial: 'word', collection: @words, as: :word %>");
  initDataTableWordProjects();
  toastr["info"]("Add words to projects successfully!");
<% else %>
  toastr["error"]("Please choose projects and words!");
<% end %>
